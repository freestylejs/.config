{
    "name": "@freestylejs/config",
    "version": "1.0.1",
    "description": "Core configurations for freestyle codebase.",
    "files": ["src/"],
    "exports": {
        "./biome": "./src/biome/biome-config.json",
        "./tsconfig": "./src/ts/tsconfig.json"
    },
    "keywords": ["config", "freestylejs", "biome", "typescript"],
    "author": "freestyle",
    "license": "MIT",
    "scripts": {
        "lint": "biome lint --write",
        "format": "biome format --write",
        "check": "biome check --write",
        "reporter": "biome check --reporter=summary",
        "publish": "pnpm publish --access public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/freestylejs/.config"
    },
    "peerDependencies": {
        "@biomejs/biome": ">=2.0.0",
        "typescript": ">=5.0.0"
    }
}
